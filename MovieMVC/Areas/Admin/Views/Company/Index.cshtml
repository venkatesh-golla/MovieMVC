
@{
    ViewData["Title"] = "Companies List";
}

<br />

<br />
<div class="border p-3" style="background-color:aliceblue;">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Companies List </h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-action="Upsert"><i class="fas fa-plus"></i> &nbsp; Create New Company</a>
        </div>
    </div>

    <br />
    <div>
        <table id="tblData" class="table table-striped table-bordered" style="width:100%">
            <thead class="thead-dark">
                <tr class="table-info">
                    <th>Name</th>
                    <th>StreetAddress</th>
                    <th>City</th>
                    <th>State</th>
                    <th>PostalCode</th>
                    <th>PhoneNumber</th>
                    <th>Authorized</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>


@section Scripts{ 
    <script src="~/js/Company.js"></script>
}