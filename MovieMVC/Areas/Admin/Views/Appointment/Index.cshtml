@model MovieMVC.Model.ViewModels.AppointmentVM
@{
    ViewData["Title"] = "Appoinments List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="get">
    <br /><br />
    <h2 class="text-white-50">Appoinments List</h2>
    <br />
    <div class="container text-white-50">
        <div class="col-12">
            <div class="row" style="padding-top:10px;">
                <div class="col-sm-2">
                    Customer Name
                </div>
                <div class="col-sm-3">
                    @Html.Editor("searchName", new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                </div>
                <div class="col-sm-2">

                </div>
                <div class="col-sm-2">
                   Email                    
                </div>
                <div class="col-sm-3">
                    @Html.Editor("searchEmail", new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                </div>
            </div>

            <div class="row" style="padding-top:10px;">
                <div class="col-sm-2">
                    Phone Number                    
                </div>
                <div class="col-sm-3">
                    @Html.Editor("searchPhone", new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                </div>

                <div class="col-sm-2">

                </div>

                <div class="col-sm-2">
                    Appointment Date                    
                </div>
                <div class="col-sm-3">
                    @Html.Editor("searchDate", new { htmlAttributes = new { @class = "form-control", @id = "datePicker", autocomplete = "off" } })
                </div>
            </div>

            <div class="row" style="padding-top:10px;">
                <div class="col=sm-2">
                </div>
                <div class="col-sm-3">
                </div>

                <div class="col-sm-2">

                </div>

                <div class="col-sm-2">
                </div>
                <div class="col-sm-3">
                    <button type="submit" name="submit" value="Search" class="btn btn-primary form-control">
                        <i class="fas fa-search"></i>Search
                    </button>
                </div>

            </div>

        </div>
    </div>
    <br /><br />

    <div style="overflow-x:auto;">
        <table class="table table-striped border text-white-50">
            <tr class="table-info">
                <th>@Html.DisplayNameFor(a => a.Appointments.FirstOrDefault().Employee)</th>
                <th>@Html.DisplayNameFor(a => a.Appointments.FirstOrDefault().AppointmentDate)</th>
                <th>@Html.DisplayNameFor(a => a.Appointments.FirstOrDefault().CustomerName)</th>
                <th>@Html.DisplayNameFor(a => a.Appointments.FirstOrDefault().CustomerPhoneNumber)</th>
                <th>@Html.DisplayNameFor(a => a.Appointments.FirstOrDefault().CustomerEMail)</th>
                <th>@Html.DisplayNameFor(a => a.Appointments.FirstOrDefault().isConfirmed)</th>
                <th></th>
                <th></th>
            </tr>

            @foreach (var item in Model.Appointments)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Employee.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.AppointmentDate)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.CustomerName)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.CustomerPhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.CustomerEMail)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.isConfirmed)
                    </td>
                    <td>
                        <partial name="_TableButtonsPartial" model="item.Id" />
                    </td>
                </tr>
            }
        </table>
    </div>

    <div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true"
         page-class="btn border" page-class-normal="btn btn-light"
         page-class-selected="btn btn-info active" class="btn-group"></div>
</form>


@section Scripts{
    <script>

        $(function () {
            $("#datePicker").datepicker({
                minDate: +1, maxDate: "+3M"
            });
        })
    </script>
}