@model MovieMVC.Model.Appointment
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row">


        <div class="col-3">

        </div>

        <div class="col-6">
            <form method="post">
                <br /><br />
                <h2 class="text-info">Appointment</h2>
                <br />
                <div class="row">
                    <div class="col-12">
                        <label>Name : </label>
                    </div>
                    <div class="col-12" style="padding-bottom:15px">
                        <input asp-for="@Model.CustomerName" class="form-control" />
                    </div>
                    <div class="col-12">
                        <label>Phone Number : </label>
                    </div>
                    <div class="col-12" style="padding-bottom:15px">
                        <input asp-for="@Model.CustomerPhoneNumber" class="form-control" />
                    </div>
                    <div class="col-12">
                        <label>Email  : </label>
                    </div>
                    <div class="col-12" style="padding-bottom:15px">
                        <input asp-for="@Model.CustomerEMail" class="form-control" />
                    </div>
                    <div class="col-12">
                        <label>Appointment Date : </label>
                    </div>
                    <div class="col-12" style="padding-bottom:15px">
                        <input asp-for="@Model.AppointmentDate" value="" type="text" id="datepicker" class="form-control" autocomplete="off"/>
                    </div>
                    <div class="col-12">
                        <label>Appointment Time : </label>
                    </div>
                    <div class="col-12" style="padding-bottom:15px">
                        <input asp-for="@Model.AppointmentTime" value="" type="text" class="timepicker form-control" autocomplete="off"/>
                    </div>
                    <div class="col-12">
                        <button type="submit" id="btnPlaceOrder" class="btn btn-success">Schedule Appointment</button>
                    </div>
                </div>
            </form>

        </div>

        <div class="col-3">

        </div>

    </div>

@section Scripts{
    <script>
        $('.timepicker').timepicker({
            timeFormat: 'h:mm p',
            interval: 30,
            minTime: '10',
            maxTime: '3:00pm',
            startTime: '10:00',
            dynamic: true,
            dropdown: true,
            scrollbar: true
        })
        $(function () {
            $("#datepicker").datepicker({
                minDate: +1, maxDate: "+3M"
            });
        })
    </script>
}