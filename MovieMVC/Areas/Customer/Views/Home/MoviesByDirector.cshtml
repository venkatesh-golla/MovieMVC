
@model IEnumerable<MovieMVC.Model.Movie>
@if (Model.Count() > 0)
{

    ViewData["Title"] = "Movies by Director: " + @Model.FirstOrDefault().Director;

    <div class="row">
        <div class="col-10">
            <h3 class="text-white-50">@ViewData["Title"]</h3>
        </div>
        <div class="col-2">
            <a asp-action="DirectorsList" class="buttonOne">Back</a>
        </div>
    </div>

    <div class="row pb-3">



        @foreach (var movie in Model)
        {
            <div class="col-lg-3 col-md-6">
                <div class="row p-2">
                    <div class="col-12  p-1" style="border:1px solid #f1f9ec; border-radius: 5px;">
                        <div class="card" style="border:0px;">
                            <img src="@movie.ImageUrl" style="height:200px" class="card-img-top rounded" />
                            <div class="pl-1">
                                <p class="card-title h5"><b style="color:#2c3e50">@movie.Title</b></p>
                                <a asp-action="moviesByDirector" asp-route-directorName="@movie.Director"><p class="card-title text-primary">by <b>@movie.Director</b></p></a>
                            </div>
                            <div style="padding-left:5px;">
                                <p>List Price: <strike><b class="">@movie.ListPrice.ToString("0.00")</b></strike></p>
                            </div>
                            <div style="padding-left:5px;">
                                <p style="color:maroon">As low as: <b class="">@movie.Price100.ToString("0.00")</b></p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@movie.Id">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
}
else
{
    <div class="row">
        <div class="col-10">
            <h3 class="text-white-50">No Movies to Display</h3>
        </div>
        <div class="col-2">
            <a asp-action="DirectorsList" class="buttonOne">Back</a>
        </div>
    </div>
}