
@model IEnumerable<MovieMVC.Model.Movie>

@{
    ViewData["Title"] = "Movies List";
}

<a class="btn btn-info" asp-action="DirectorsList">Directors</a>
<a class="btn btn-info" asp-action="CategoryList">Categories</a>
<hr />
<div class="row pb-3">

    @foreach (var movie in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12  p-1" style="border:1px solid #008cba; border-radius: 5px;">
                    <div class="card" style="border:0px;">
                        <img src="@movie.ImageUrl" style="height:200px" class="card-img-top rounded" />
                        <div class="pl-1">
                            <p class="card-title h5"><b style="color:#2c3e50">@movie.Title</b></p>
                            <a asp-action="moviesByDirector" asp-route-directorName="@movie.Director"><p class="card-title text-primary">by <b>@movie.Director</b></p></a>
                            <a asp-action="moviesByCategory" asp-route-categoryId="@movie.CategoryId"><p class="card-title text-primary">Category: <b>@movie.Category.Name</b></p></a>
                        </div>
                        <div style="padding-left:5px;">
                            <p>List Price: <strike><b class="">@movie.ListPrice.ToString("0.00")</b></strike></p>
                        </div>
                        <div style="padding-left:5px;">
                            <p style="color:maroon">As low as: <b class="">@movie.Price100.ToString("0.00")</b></p>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@movie.Id">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }

</div>
