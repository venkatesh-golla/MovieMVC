@model IEnumerable<MovieMVC.Model.Category>

@if (Model.Count() > 0)
{
    ViewData["Title"] = "List of Categories";
    <div class="row">
        <div class="col-10">
            <h3 class="text-white-50">@ViewData["Title"]</h3>
        </div>
        <div class="col-2">
            <a asp-action="Index" class="buttonOne">Back</a>
        </div>
    </div>
    <hr />
    <div class="row">
        @foreach (var category in Model)
        {
            <div class="d-flex justify-content-center align-items-center col-2 p-1 mr-3 mb-3 bg-primary" style="border:1px solid black; border-radius: 5px;">
                <a asp-action="moviesByCategory" asp-route-categoryId="@category.Id"> <span class="align-middle text-white">@category.Name</span></a>
            </div>

        }
    </div>

}
else
{
    <div class="row">
        <div class="col-10">
            <h3 class="text-white-50">No Categories in the List</h3>
        </div>
        <div class="col-2">
            <a asp-action="Index" class="buttonOne">Back</a>
        </div>
    </div>
}